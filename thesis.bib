journal = {Journal of visualized experiments : JoVE},
keywords = {Attention,Cerebellum,Cognition,Humans,Memory, Short-Term,Nerve Tissue,Prefrontal Cortex,Reaction Time,Transcranial Direct Current Stimulation,methods,physiology},
language = {eng},
number = {96},
