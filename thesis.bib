file = {:Users/lcreteig/Documents/Mendeley Desktop/Harty, Sella, Cohen Kadosh{\_}2017{\_}Frontiers in Human Neuroscience.pdf:pdf},
journal = {Frontiers in Human Neuroscience},
keywords = {behavior,mediation analysis,moderation analysis,neurophysiology,trancranial direct current stimulation,transcranial electrical stimulation},
number = {March},
pages = {1--5},
title = {{Transcranial Electrical Stimulation and Behavioral Change: The Intermediary Influence of the Brain}},
volume = {11},
