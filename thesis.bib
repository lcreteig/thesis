issn = {18733514},
journal = {Neuropsychologia},
keywords = {Eye movements,Fatigue,Non-spatial attention,Spatial attention},
pages = {1--8},
publisher = {Elsevier},
title = {{The asymmetrical influence of increasing time-on-task on attentional disengagement}},
