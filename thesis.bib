issn = {00109452},
journal = {Cortex},
keywords = {Alertness,Cross-over,Landmark task,Orienting,Pseudoneglect},
number = {3},
pages = {827--836},
pmid = {22270326},
title = {{Stimulus- and state-dependence of systematic bias in spatial attention: Additive effects of stimulus-size and time-on-task}},
url = {http://dx.doi.org/10.1016/j.cortex.2011.12.007},
volume = {49},
