issn = {15308898},
journal = {Journal of Cognitive Neuroscience},
number = {11},
pages = {2596--2607},
pmid = {23647519},
title = {{The decoupled mind: Mind-wandering disrupts cortical phase-locking to perceptual events}},
volume = {26},
