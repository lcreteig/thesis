file = {:Users/lcreteig/Documents/Mendeley Desktop/Verhagen et al.{\_}2019{\_}eLife.pdf:pdf},
journal = {eLife},
pages = {1--28},
title = {{Offline impact of transcranial focused ultrasound on cortical activation in primates}},
volume = {8},
year = {2019}
}
