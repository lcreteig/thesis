keywords = {Dual-site Transcranial Alternating Current Stimula,Electric field simulations,Focality,Neural oscillations},
pages = {68--80},
publisher = {Elsevier Inc.},
title = {{How to target inter-regional phase synchronization with dual-site Transcranial Alternating Current Stimulation}},
