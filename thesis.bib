issn = {18733514},
journal = {Neuropsychologia},
keywords = {DLPFC,Executive Function,Meta-analysis,TDCS},
pages = {156--166},
title = {{Effects of prefrontal tDCS on executive function: Methodological considerations revealed by meta-analysis}},
volume = {117},
year = {2018}
}
