issn = {10538119},
journal = {NeuroImage},
keywords = {Alpha entrainment,Attentional blink,Early categorization,P1,Phase concentration},
number = {2},
pages = {674--686},
pmid = {22796984},
publisher = {Elsevier Inc.},
title = {{Alpha entrainment is responsible for the attentional blink phenomenon}},
